
<main>
	<% if flash[:notice] %>
    <p class="notice-message"><%= flash[:notice] %></p>
    <% end %>

	<div class="update-book">
		<h2>Editing Book</h2>

		<%= form_for(@book) do |f| %>
			<div class="form-boxes clearfix">
				<div class="form-box">
    				<h4>Title</h4>
    				<%= f.text_field :title, class: "book_title"  %>
    			</div>
    			<div class="form-box">
    				<h4>Body</h4>
    				<%= f.text_area :body, class: "book_body"  %>
    			</div>
    			<%= f.submit 'Update Book' %>
			</div>
			<p><%=link_to "Show", book_path(@book.id), class: "show_#{@book.id}" %> | <%=link_to "Back", '/books', class: "back" %></p>
        <% end %>
    </div>
</main>


