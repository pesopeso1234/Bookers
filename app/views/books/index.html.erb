    <header>
    <header>
        <main>
            <% if flash[:notice] %>
            <p class="notice-message"><%= flash[:notice] %></p>
            <% end %>
            
            <h2>Books</h2>
    	    <table border="1" >
                <tr>
    	           <th>Title</th>
                    <th>Body</th>
                </tr>
                    <% if @books_index.present? %>
                        <% @books_index.each do |book| %>
                            <tr>
                                <td><%= book.title %></td>
                                <td><%= book.body %></td>
                                <td><%=link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
                                <td><%=link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
                                <td><%= link_to "Delete", destroy_book_path(book.id), class: "destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
                            </tr>
                        <% end %>
                    <% end %>
                <tr>
            </table>

            <div class="add-book">
                <h3>New book</h3>
                <%= form_for(@book_add) do |f| %>
                    <div class="form-boxes clearfix">
                        <div class="form-box">
                            <h4>Title</h4>
                            <%= f.text_field :title, class: "book_title" %>
                        </div>
                        <div class="form-box">
                            <h4>Body</h4>
                            <%= f.text_area :body, class: "book_body" %>
                        </div>

                    <%= f.submit 'Create Book' %>
                    </div>
                <% end %>
            </div>
        </main>
